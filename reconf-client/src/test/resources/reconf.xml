<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<configuration xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="https://raw.github.com/reconf/reconf-jvm/master/schema/reconf-1.0.xsd">
    <locale>pt_BR</locale>
    <local-cache>
        <location>/tmp/other/hsqldb2-tester/db</location>
        <max-log-file-size-mb>10</max-log-file-size-mb>
        <compressed>true</compressed>
    </local-cache>
    <server>
        <url>http://reader.reconf.intranet</url>
        <timeout>20</timeout>
        <time-unit>SECONDS</time-unit>
        <max-retry>3</max-retry>
    </server>
    <configuration-repository-update-frequency>
        <interval>5</interval>
        <time-unit>MINUTES</time-unit>
    </configuration-repository-update-frequency>
    <enable-debug/>
</configuration>
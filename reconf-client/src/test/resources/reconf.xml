<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<configuration>
    <locale>pt_BR</locale>
    <local-cache>
        <location>/tmp/other/hsqldb2-tester/db</location>
        <max-log-file-size-mb>10</max-log-file-size-mb>
        <compressed>true</compressed>
    </local-cache>
    <server>
        <url>http://config-reader.remote-admin.intranet</url>
        <timeout>20</timeout>
        <time-unit>SECONDS</time-unit>
    </server>
    <override-reload-policy>
        <interval>10</interval>
        <time-unit>MINUTES</time-unit>
    </override-reload-policy>
</configuration>